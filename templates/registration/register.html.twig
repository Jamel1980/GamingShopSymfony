{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}


{% block body %}
{% block stylesheets %}
<style>
    .invalid {
        color: red;
        display: block;
        border-radius: 10px;
        /* box-shadow: 0 0 10px black; */
        box-shadow: rgba(244, 239, 239, 0.827) 0px -23px 25px 0px inset, rgba(255, 255, 255, 0.15) 0px -36px 30px 0px inset, rgb(255, 255, 255) 0px -79px 40px 0px inset, rgba(0, 0, 0, 0.06) 0px 2px 1px, rgb(235, 235, 235) 0px 4px 2px, rgba(253, 253, 253, 0.826) 0px 8px 4px, rgba(255, 255, 255, 0.09) 0px 16px 8px, rgba(255, 255, 255, 0.09) 0px 32px 16px;

    }


    .valid {
        display: none;
        color: green;
        border-radius: 10px;
        box-shadow: rgba(244, 239, 239, 0.827) 0px -23px 25px 0px inset, rgba(255, 255, 255, 0.15) 0px -36px 30px 0px inset, rgb(255, 255, 255) 0px -79px 40px 0px inset, rgba(0, 0, 0, 0.06) 0px 2px 1px, rgb(235, 235, 235) 0px 4px 2px, rgba(253, 253, 253, 0.826) 0px 8px 4px, rgba(255, 255, 255, 0.09) 0px 16px 8px, rgba(255, 255, 255, 0.09) 0px 32px 16px;

    }
</style>
{% endblock %}
<div class="d-flex justify-content-center bg-dark">
    <div class="text-center text-bg-dark py-4">


        {{ form_start(registrationForm) }}
        <h1 class="mb-2">INSCRIPTION</h1>
        <div class="form-group">
            {{ form_label(registrationForm.nom, 'Nom') }}
            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.prenom, 'Prenom') }}
            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.email, 'Email') }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            {{ form_widget(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class':
            'form-control','onkeyup':'validatePassword()'}}) }}
            <p id="length" class="invalid">Le mot de passe doit contenir au moins 8 caractères</p>
            <p id="uppercase" class="invalid">Le mot de passe doit contenir au moins une lettre majuscule</p>
            <p id="lowercase" class="invalid">Le mot de passe doit contenir au moins une lettre minuscule</p>
            <p id="special" class="invalid">Le mot de passe doit contenir au moins un caractère spécial</p>
            <p id="digit" class="invalid">Le mot de passe doit contenir au moins un chiffre</p>
            <p id="success" class="valid" style="display: none;">Votre mot de passe est valide</p>
        </div>
        <div class="form-group form-check my-2 d-flex justify-content-around align-items-center ">
            {{ form_label(registrationForm.agreeTerms, 'Accepter les conditions', {'label_attr': {'class':
            'form-check-label'}}) }}
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input mt-4'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">s'inscrire</button>

        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}